{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "src/*": ["./src/*"],
      "api/*": ["./src/api/*"],
      "utils/*": ["./src/utils/*.ios", "./src/utils/*.android", "./src/utils/*"],
      "components/*": ["./src/components/*.android", "./src/components/*.ios", "./src/components/*"],
      "containers/*": ["./src/containers/*"],
      "navigators/*": ["./src/navigators/*"],
      "reducers/*": ["./src/reducers/*"],
      "actions/*": ["./src/actions/*"],
      "services/*": ["./src/services/*"],
      "records/*": ["./src/records/*"],
      "types/*": ["./src/types/*"],
      "configs/*": ["./src/configs/*"],
      "tsResources/*": ["./src/ts-resources/*"]
    }
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.android.tsx"
  ],
  "exclude": [
    "build",
    "node_modules",
    "bumpVersion.js",
    "bitrise-scripts",
    "coverage",
    "webpack.haul.js"
  ],
  "compileOnSave": false
}
